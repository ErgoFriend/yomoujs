{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "baseUrl": "src",
    "outDir": "dist",
    "strictPropertyInitialization": false
  },
}